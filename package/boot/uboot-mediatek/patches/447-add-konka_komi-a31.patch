+			label = "green:status";
+			gpios = <&gpio 8 GPIO_ACTIVE_LOW>;
+			default-state = "off";
+		};
+
+		led-1 {
+			label = "blue:status";
+			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
+			default-state = "off";
+		};
+
+		red_led: led-2 {
+			label = "red:status";
+			gpios = <&gpio 34 GPIO_ACTIVE_HIGH>;
+			default-state = "on";
+		};
+	};
+};
+
