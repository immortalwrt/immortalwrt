+				      NL80211_EXT_FEATURE_CONTROL_PORT_OVER_NL80211);
+		wiphy_ext_feature_set(hw->wiphy,
+				      NL80211_EXT_FEATURE_CONTROL_PORT_NO_PREAUTH);
+		wiphy_ext_feature_set(hw->wiphy,
+				      NL80211_EXT_FEATURE_CONTROL_PORT_OVER_NL80211_TX_STATUS);
+	}
